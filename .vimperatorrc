" vim: set ft=vim:
" retlet .vimperatorrc
" for Vimperator 1.2pre


" 基本設定
"+----------------------------------------------------------------------------------------+
" ブラウザのタイトル
set titlestring=Firefox
" 検索語のハイライト
set hlsearch
" ビープを鳴らさない
set visualbell
"ビジュアルレベルを無効化
highlight Bell display:none;
" ヒントモードを英字にする
set hintchars=ifjklasdhguonmerwc
" ヒントモードの英字は大文字に
hi Hint z-index:5000; font-size:14px; color:white; background-color:red; border-color:ButtonShadow; border-width:0px; border-style:solid; padding:0px 2px 0px 2px; position:absolute; font-family: Menlo, Consolas, Monaco, monospace; text-transform: uppercase;
"タブオープンやオープンで何を表示するか
set complete=lsSt
" twitterとか開いたときにinput要素にfocusを奪われないようにする
set focuscontent
" !でcssの表示切り替え
noremap <silent> ! :set invusermode<CR>
" インサートモードの時に<C-i>でgvimを使って編集できる
if has('win32')
    set editor='gvim -f'
else
    set editor='/Applications/MacVim.app/Contents/MacOS/MacVim'
endif


set history=1000
set messages=1000

" コマンドモード時に強制的にIMEをオフに
:style -name commandline-ime chrome://* #liberator-commandline-command input {ime-mode: inactive;}

" キーマップ設定
"+----------------------------------------------------------------------------------------+
"j/kの移動量を5倍に
noremap j 5<C-e>
noremap k 5<C-y>
" 選択文字列のgoogle検索を <C-g> に割り当て
noremap <C-g> YP

" h/l や ← → でタブ移動
noremap h <C-p>
noremap l <C-n>

" .vimperatorrcを再読み込み(:restartしなくてもいい)
noremap <C-r> :mapc<CR>:cmapc<CR>:imapc<CR>:so ~/.vimperatorrc<CR>

" インサートモードにてemacs ライクな動きを行う
inoremap <C-f> <Right>
inoremap <C-b> <Left>
inoremap <C-n> <Down>
inoremap <C-p> <Up>
inoremap <C-m> <Enter>

" Shift + ← → で現在のタブの位置変更
noremap <S-Right> :tabmove! +1<CR>
noremap <S-Left>  :tabmove! -1<CR>

"<A-r>でFirefoxを再起動
noremap <A-r> :restart<CR>
"<A-h>でヘルプを表示
noremap <A-h> :help<CR>

echo ".vimperatorrc sourced"

