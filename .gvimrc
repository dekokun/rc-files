" タブをスペースに変換
set expandtab
" タブの画面上での幅
set ts=4
" オートインデント時のタブ幅
set shiftwidth=4
"印刷するときに行番号を付与する
set printoptions=number:y
" カラー設定:
colorscheme torte

"バックアップファイルフォルダ

set backup

set backupdir=$HOME\vimperator\temp

set swapfile
set directory=$HOME\vimperator\temp
